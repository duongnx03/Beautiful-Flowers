
    <div class="container">
      <h1 class="text-success">Products List</h1>
      <%if(message){%> 
         <div class="alert alert-success alert-dismissable">
          <button class="btn btn-close" data-bs-dismiss="alert">                  
          </button>
          <strong>success!</strong>
          <%= message%>
         </div> 
      <%}%>
      <a href="/product/create" class="btn btn-info">Create New</a><br><br>
      
      <table class="table table-hover">
          <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Description</th>
              <th>Image</th>
              <th>Action</th>
          </tr>
          <% products.forEach(item => {%>          
          <tr>
              <td><%=item.id%></td>
              <td><%=item.name%></td>
              <td><%=item.price%></td> 
              <td><%=item.quantity%></td> 
              <td><%=item.description%></td>  
              <td>
                <img src=" <%=item.image%>" alt="image" width="100px" class="img-thumbnail"> 
              </td>
              <td>
                  <a href="/product/edit/<%=item._id%>" class="btn btn-success">Update</a> <!-- Nút cập nhật -->
                  <a href="/product/delete/<%=item._id%>" class="btn btn-danger">Delete</a> <!-- Nút xóa -->
              </td>
          </tr>              
          <%})%>
      </table>
  </div>
